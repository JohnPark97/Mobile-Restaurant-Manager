# Database
DATABASE_URL="postgresql://username@localhost:5432/restaurant_manager?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Server
PORT=3000
NODE_ENV="development"

# Rate Limiting (Development - increase for testing, decrease for production)
RATE_LIMIT_WINDOW_MS="60000"        # 60 seconds (development)
RATE_LIMIT_MAX_REQUESTS="1000"      # 1000 requests per window (development)
# Production recommended: RATE_LIMIT_WINDOW_MS="900000" (15 min), RATE_LIMIT_MAX_REQUESTS="100"

# Optional: Email Configuration (for email verification)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="Restaurant Manager <noreply@restaurantmanager.com>"

# Optional: Twilio Configuration (for SMS verification)
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# File Uploads
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="5242880"  # 5MB

# CORS
CORS_ORIGIN="*"
